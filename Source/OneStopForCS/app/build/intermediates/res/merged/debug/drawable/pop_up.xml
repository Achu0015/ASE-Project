<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"/>

            <solid android:color="@color/colorMain" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />
            <gradient
                android:startColor="@color/colorLight"
                android:centerColor="#ffffff"
                android:endColor="@color/colorMain"
                android:type="linear"
                android:angle="45"/>
        </shape>
    </item>
</layer-list>